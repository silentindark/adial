# Asterisk ARI Configuration
ARI_HOST=127.0.0.1
ARI_PORT=8088
ARI_USERNAME=dialer
ARI_PASSWORD=your_ari_password_here
ARI_APP_NAME=dialer

# MySQL Database Configuration
DB_HOST=127.0.0.1
DB_USER=root
DB_PASSWORD=your_database_password_here
DB_NAME=adialer

# Application Settings
# DEBUG_MODE: Enable/disable debug features (true/false)
DEBUG_MODE=false

# LOG_LEVEL: Logging level (error, warn, info, debug)
# Set to 'info' for production, 'debug' for troubleshooting
LOG_LEVEL=info

RECORDINGS_PATH=/var/spool/asterisk/monitor/adial
SOUNDS_PATH=/var/lib/asterisk/sounds/dialer

# Campaign Processing Settings
# CAMPAIGN_PROCESS_INTERVAL: How often to check for new calls to dial (in milliseconds)
# Lower values = faster call initiation but more CPU usage
# 100 = check 10 times per second (very fast, default)
# 1000 = check once per second
# 3000 = check every 3 seconds
CAMPAIGN_PROCESS_INTERVAL=100
